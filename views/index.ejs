<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Chatroom App</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="../stylesheets/style.css" />
  </head>
  <body>
    <form class="form-username">
      <h1>Join Chatroom</h1>
      <p>Username</p>
      <input type="text" id="username-input" placeholder="Username" />
      <button id="join-btn" type="submit">Join Chat</button>
    </form>
    <div class="chatroom-container">
      <div class="chatroom-header">Chatroom</div>
      <div class="messages" id="messages-container">
        <!-- <div class="message received">Hey</div>
        <div class="message sent">Hello hi</div> -->
      </div>
      <div>
        <input type="text" placeholder="Enter Message" id="message-input" />
        <button id="send-btn">Send</button>
        <button id="exit-btn">Exit</button>
      </div>
    </div>
    <!-- <script src="/socket.io/socket.io.js"></script> -->
    <script src="https://cdn.socket.io/4.6.0/socket.io.min.js"
    integrity="sha384-c79GN5VsunZvi+Q/WObgk2in0CbZsHnjEqvFxC5DxHn9lTfNce2WW6h2pH6u/kF+"
    crossorigin="anonymous"></script>
    <script src="../javascripts/script.js" async defer></script>
  </body>
</html>